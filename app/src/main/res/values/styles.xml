<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">#F9AA33</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="helperTextTextColor">@color/colorSecondary</item>
    </style>
</resources>
